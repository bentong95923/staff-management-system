{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build sqlite.o",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-c",
                "sqlite\\sqlite3.c",
                "-o",
                "bin\\sqlite3.o"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "build main",
            "type": "shell",
            "command": "g++",
            "args": [
                "employee\\employee.cpp",
                "employee\\name.cpp",
                "employee\\phone.cpp",
                "main.cpp",
                "bin\\sqlite3.o",
                "-o",
                "bin\\main"
            ],
            "group": "build",
            "dependsOn": [
                "build sqlite.o"
            ],
            "problemMatcher": []
        },
        {
            "label": "run main",
            "type": "shell",
            "command": "bin\\main",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "dependsOn": [
                "build main"
            ],
            "problemMatcher": []
        }
    ]
}